{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "db",
    "labels": {
      "name": "db"
    }
  },
  "spec": {
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "name": "db"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "db",
            "image": "hypriot/rpi-mysql:5.5",
            "env": [
              {
                "name": "MYSQL_ROOT_PASSWORD",
                "value": "my-secret-pw"
              },
              {
                "name": "MYSQL_DATABASE",
                "value": "techfest16"
              }
            ],
            "ports": [
              {
                "name": "mysql-server",
                "containerPort": 3306
              }
            ]
          }
        ]
      }
    }
  }
}
