{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "web",
    "labels": {
      "name": "web"
    }
  },
  "spec": {
    "replicas": 1,
    "template": {
      "metadata": {
        "labels": {
          "name": "web"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "web",
            "image": "stevesloka/k8s-webapp",
            "ports": [
              {
                "name": "web-port",
                "containerPort": 80
              }
            ]
          }
        ]
      }
    }
  }
}
